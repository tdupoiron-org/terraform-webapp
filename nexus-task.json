[
  {
    "name": "${owner}-${appname}-task",
    "image": "${appimage}",
    "essential": true,
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "/ecs/${owner}-${appname}",
        "awslogs-region": "eu-west-3",
        "awslogs-stream-prefix": "ecs"
      }
    },
    "portMappings": [
      {
        "containerPort": 8081,
        "hostPort": 8081
      }
    ],
    "healthCheck": {
      "command": [
        "CMD-SHELL",
        "curl -f http://localhost:8081/ || exit 1"
      ],
      "interval": 30,
      "timeout": 5,
      "retries": 3,
      "startPeriod": 60
    },
    "tags": [
      {
        "key": "Owner",
        "value": "${owner}-${appname}"
      }
    ]
  }
]
